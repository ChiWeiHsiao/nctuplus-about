<div id="main-container" class="container bg-white" style="padding-left:100px; padding-right:150px; padding-bottom:100px;">
  <h1 style="margin-bottom:40px;"> 更新成員資料 </h1>
  <%= form_for @member ,:html=>{class: "form-horizontal", role:"form", id:"member-form"} do |f| %>


    <div class="form-group">
      <label class="col-sm-2 control-label">姓名</label>
      <div class="col-sm-10">
	<%= f.text_field "name", :class=>"form-control", placeholder:"", required:"true" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">暱稱</label>
      <div class="col-sm-10">
	<%= f.text_field "nickname", :class=>"form-control",  placeholder:"" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">部門</label>
      <div class="col-sm-10">
	<label class="radio-inline">
	  <%= f.radio_button :job, 'Designer' %> Designer
	</label>
	<label class="radio-inline">
	  <%= f.radio_button :job, 'Marketing' %> Marketing
	</label>
	<label class="radio-inline">
	  <%= f.radio_button :job, 'Programmer' %> Programmer
	</label>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">科系</label>
      <div class="col-sm-10">
	<%= f.text_field "department", class:"form-control",  placeholder:"" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">fb連結</label>
      <div class="col-sm-10">
	<%= f.text_field "fb", :class=>"form-control",  placeholder:"" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">email</label>
      <div class="col-sm-10">
	<%= f.text_field "email", :class => "form-control", placeholder:"" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">加入nctu+的原因</label>
      <div class="col-sm-10">
	<%= f.text_area "motivation", :class => "form-control", rows:"8" %>
      </div> 
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">其他</label>
      <div class="col-sm-10">
	<%= f.text_area "others", :class => "form-control", rows:"8" %>
      </div> 
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">上傳圖片</label>
      <div class="col-sm-10">
	<%= f.file_field :member_image %>
      </div> 
    </div>

    <div align="right"  style="margin-top:15px; margin-bottom:15px"> 
      <%=f.submit "送出",class:"btn btn-lg btn-info"%>
    </div>

  <% end %>
</div>
